@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Destinations>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master.cshtml";
}
<section>
    <div class="home-banner" style="background-image: url(@Model.BackgroundImage.LocalCrops.Src);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <div class="banner-text">
                        @Model.TextBlock

                        @if (Model.IncludeSearchBar)
                        {
                            @await Umbraco.RenderMacroAsync("SearchForm")
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>